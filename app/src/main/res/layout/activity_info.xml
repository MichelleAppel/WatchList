<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michelle.watchlist.InfoActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/posterView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp" />

    <Button
        android:text="Add to Watch List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchList_addremove"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="watchList_addremove"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="8sp" />

    <TextView
        android:text="type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeView"
        android:layout_below="@+id/watchList_addremove"
        android:layout_toRightOf="@+id/posterView"
        android:layout_toEndOf="@+id/posterView" />

    <TextView
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/typeView"
        android:layout_toRightOf="@+id/posterView" />

    <TextView
        android:text="year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearView"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_alignLeft="@+id/titleView"
        android:layout_alignStart="@+id/titleView"
        android:layout_below="@+id/titleView" />

    <TextView
        android:text="runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runTimeView"
        android:layout_below="@+id/genreView"
        android:layout_alignLeft="@+id/yearView"
        android:layout_alignStart="@+id/yearView"
        android:paddingTop="10dp" />

    <TextView
        android:text="genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genreView"
        android:layout_below="@+id/yearView"
        android:layout_alignLeft="@+id/runTimeView"
        android:layout_alignStart="@+id/runTimeView"
        android:paddingTop="10dp" />

    <TextView
        android:text="plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plotView"
        android:layout_below="@+id/posterView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/runTimeView"
        android:layout_alignLeft="@+id/runTimeView"
        android:layout_alignStart="@+id/runTimeView"
        android:id="@+id/ratingView"
        android:paddingTop="10dp" />

</RelativeLayout>
